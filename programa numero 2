def bubble_sort(arr):
    """Ordena una lista usando el algoritmo Bubble Sort."""
    n = len(arr)
    for i in range(n):
        for j in range(0, n - i - 1):
            if arr[j] > arr[j + 1]:
                arr[j], arr[j + 1] = arr[j + 1], arr[j]

def ordenar_fila_matriz(matriz, fila):
    """Ordena una fila espec√≠fica de la matriz en orden ascendente."""
    if 0 <= fila < len(matriz):  # Verificar si la fila es v√°lida
        bubble_sort(matriz[fila])  # Ordenar la fila seleccionada
    else:
        print("‚ö† La fila ingresada no es v√°lida.")

# Matriz 3x3 inicial
matriz = [
    [30, 10, 20],
    [90, 50, 40],
    [70, 60, 80]
]

# Fila a ordenar (por ejemplo, la fila 1)
fila_a_ordenar = 1

# Mostrar matriz original
print("üìå Matriz original:")
for fila in matriz:
    print(fila)

# Ordenar la fila espec√≠fica
ordenar_fila_matriz(matriz, fila_a_ordenar)

# Mostrar matriz despu√©s de ordenar la fila
print("\n‚úÖ Matriz con la fila ordenada:")
for fila in matriz:
    print(fila)